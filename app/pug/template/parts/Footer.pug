footer.footer
	section._info-wrapper
		._info.wrapper
			.info-video.footer-block
				h3._heading Посмотри
				.video__list
					.video__slider-wrapper
						iframe.video__item(src="https://www.youtube.com/embed/iIst68UhODc" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen)
